{
  "name": "wc-zoom",
  "version": "0.0.0-development",
  "description": "Sell virtual Zoom webinars with WooCommerce",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seattlewebco/wc-zoom.git"
  },
  "author": "Seattle Web Co.",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/seattlewebco/wc-zoom/issues"
  },
  "homepage": "https://github.com/seattlewebco/wc-zoom#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/plugin-transform-classes": "^7.9.5",
    "@babel/polyfill": "^7.8.7",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.26.3",
    "browser-sync-webpack-plugin": "2.2.2",
    "copy-webpack-plugin": "^4.6.0",
    "core-js": "^3.6.5",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^5.12.0",
    "eslint-config-wordpress": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^8.0.0",
    "laravel-mix": "^4.0.14",
    "laravel-mix-polyfill": "^2.0.0",
    "laravel-mix-svg-sprite": "^1.0.0",
    "node-wp-i18n": "^1.2.2",
    "postcss-preset-env": "^6.5.0",
    "prettier": "^1.13.4",
    "prettier-stylelint": "^0.4.2",
    "sass": "^1.16.0",
    "sass-loader": "^7.1.0",
    "semantic-release-version-bump": "^1.4.1",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-wordpress": "^13.1.0",
    "stylelint-order": "^0.8.1",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.10"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "cross-env sync=1 NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "lint": "npm run lint:styles && npm run lint:scripts && npm run lint:php",
    "lint:styles": "cross-env stylelint './assets/scss/**/*.scss' --syntax scss",
    "lint:scripts": "cross-env eslint './assets/js/**/*.js'",
    "lint:php": "cross-env ./vendor/bin/phpcs . --runtime-set testVersion 5.6- -s",
    "i18n": "npm run i18n:textdomain && npm run i18n:pot",
    "i18n:textdomain": "npx wpi18n addtextdomain --exclude=vendor,tests,node_modules",
    "i18n:pot": "npx wpi18n makepot --domain-path=assets/lang"
  },
  "release": {
    "tagFormat": "${version}",
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ]
    ],
    "prepare": [
      [
        "semantic-release-version-bump",
        {
          "files": "wc-zoom.php"
        }
      ]
    ]
  }
}
